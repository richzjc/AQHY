<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <LinearLayout
            android:id="@+id/tv_jump_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp">

        <TextView
                android:id="@+id/tv_jump"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="跳过"
                android:textColor="#7a899b"
                android:textSize="18sp"
                android:visibility="visible" />
    </LinearLayout>

    <com.micker.global.indicator.MagicIndicator
            android:id="@+id/magic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_dp20"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_dp10" />

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/magic"
            android:layout_marginBottom="@dimen/margin_dp20" />
</RelativeLayout>
