<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.micker.core.imageloader.WscnImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            app:actualImageScaleType="centerCrop" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_dp50"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_dp15"
                    android:layout_marginRight="@dimen/margin_dp15"
                    android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/margin_dp5">

                    <ImageView
                            android:id="@+id/first_stage"
                            android:layout_width="@dimen/margin_dp85"
                            android:layout_height="@dimen/margin_dp85"
                            android:scaleType="fitXY"
                            android:src="@drawable/first_stage_logo" />
                </androidx.cardview.widget.CardView>


                <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:visibility="invisible" />
                <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/margin_dp5">

                    <ImageView
                            android:id="@+id/third_stage"
                            android:layout_width="@dimen/margin_dp85"
                            android:layout_height="@dimen/margin_dp85"
                            android:scaleType="fitXY"
                            android:src="@drawable/third_stage_logo" />
                </androidx.cardview.widget.CardView>

                <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/margin_dp5">

                    <ImageView
                            android:id="@+id/second_stage"
                            android:layout_width="@dimen/margin_dp85"
                            android:layout_height="@dimen/margin_dp85"
                            android:scaleType="fitXY"
                            android:src="@drawable/second_stage_logo" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_dp15"
                    android:layout_marginRight="@dimen/margin_dp15"
                    android:layout_marginTop="@dimen/margin_dp15"
                    android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/margin_dp5">

                    <ImageView
                            android:id="@+id/four_stage"
                            android:layout_width="@dimen/margin_dp85"
                            android:layout_height="@dimen/margin_dp85"
                            android:scaleType="fitXY"
                            android:src="@drawable/four_stage_logo" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
