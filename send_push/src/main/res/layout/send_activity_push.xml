<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

    <Button
            android:id="@+id/send_push"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_dp45"
            android:layout_marginLeft="@dimen/margin_dp15"
            android:layout_marginRight="@dimen/margin_dp15"
            android:layout_marginBottom="@dimen/margin_dp15"
            android:background="#1478f0"
            android:gravity="center"
            android:text="推送"
            android:textColor="@color/white"
            android:textSize="16sp" />

    <Button
            android:id="@+id/search_status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_dp45"
            android:layout_marginLeft="@dimen/margin_dp15"
            android:layout_marginRight="@dimen/margin_dp15"
            android:layout_marginBottom="@dimen/margin_dp15"
            android:background="#1478f0"
            android:gravity="center"
            android:text="查询消息状态"
            android:textColor="@color/white"
            android:textSize="16sp" />
</LinearLayout>