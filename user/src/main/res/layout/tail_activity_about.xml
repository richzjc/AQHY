<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_f8f8f8">

    <com.micker.core.widget.TitleBar
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:statusBarPadding="true"
            app:titleText="关于我们"
    />

    <View android:layout_width="match_parent"
          android:layout_height="@dimen/space_0.5"
          android:background="@color/color_e6e6e6"
    />

    <com.micker.core.imageloader.WscnImageView
            android:layout_width="@dimen/margin_dp70"
            android:layout_height="@dimen/margin_dp70"
            android:layout_marginTop="@dimen/margin_dp60"
            app:actualImageResource="@drawable/ic_launcher"
            android:layout_gravity="center_horizontal"
            app:roundAsCircle="true"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_size_16"
            android:text="@string/app_name"
            android:textColor="@color/day_mode_text_color"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_dp20"
    />

    <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_999999"
            android:layout_marginTop="@dimen/margin_dp10"
    />

    <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/day_mode_text_color"
            android:layout_marginTop="@dimen/margin_dp20"
            android:lineSpacingExtra="@dimen/margin_dp8"
            android:paddingLeft="@dimen/margin_dp15"
            android:paddingRight="@dimen/margin_dp15"
            android:visibility="gone"
    />
</LinearLayout>