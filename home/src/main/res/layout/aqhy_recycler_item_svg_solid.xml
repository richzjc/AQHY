<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_dp10"
>

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_dp1"
                    android:background="@drawable/shape_color_outer_bg"
    >
        <com.micker.core.imageloader.WscnImageView
                android:id="@+id/image"
                android:layout_width="@dimen/margin_dp50"
                android:layout_height="@dimen/margin_dp50"
                android:layout_centerHorizontal="true"
                app:roundAsCircle="true"
        />

    </RelativeLayout>
    <TextView
            android:id="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_aaaaaa"
            android:textSize="@dimen/text_size_18"
            android:layout_marginTop="@dimen/margin_dp65"
    />
</RelativeLayout>