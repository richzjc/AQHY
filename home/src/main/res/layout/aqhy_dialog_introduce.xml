<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_user_privacy_bg"
        android:orientation="vertical"
        android:padding="@dimen/margin_dp10">


    <com.micker.core.widget.ShareTextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:paddingLeft="@dimen/margin_dp15"
            android:paddingRight="@dimen/margin_dp15"
            android:paddingBottom="@dimen/margin_dp10"
            android:paddingTop="@dimen/margin_dp10"
            android:textSize="@dimen/text_size_16" />


    <TextView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_dp45"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_dp10"
            android:gravity="center"
            android:text="反馈"
            android:textColor="@color/white"
            android:textSize="20dp" />

</LinearLayout>