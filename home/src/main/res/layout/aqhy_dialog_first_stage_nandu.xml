<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_user_privacy_bg"
        android:orientation="vertical"
        android:padding="@dimen/margin_dp10">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_dp45"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <com.micker.core.widget.ShareTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="难度系数:"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_16" />

        <EditText
                android:id="@+id/find_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_dp10"
                android:background="@drawable/shape_first_stage_dialog_et_bg"
                android:hint="输入3~11的数字,越大越难"
                android:inputType="number"
                android:paddingLeft="@dimen/margin_dp10"
                android:paddingRight="@dimen/margin_dp10"
                android:cursorVisible="true"
                android:textSize="@dimen/text_size_14"
                android:textCursorDrawable="@color/color_1482f0"
                android:textColorHint="@color/color_999999" />
    </LinearLayout>

    <TextView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_dp45"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_dp10"
            android:gravity="center"
            android:text="确定"
            android:textSize="20dp"
            android:textColor="@color/white"
            />


</LinearLayout>