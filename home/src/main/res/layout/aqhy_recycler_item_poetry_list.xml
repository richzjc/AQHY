<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="@dimen/margin_dp15">

    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/day_mode_text_color1_333333"
            android:textSize="@dimen/text_size_22"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_dp10"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/day_mode_text_color2_666666"
            android:textSize="@dimen/text_size_16" />


    <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_dp15"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/day_mode_text_color1_333333"
            android:textSize="@dimen/text_size_18" />
</LinearLayout>