<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <com.micker.core.imageloader.WscnImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/aqhy_drawable_home_category_list_bottom"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_dp5"
            android:paddingRight="@dimen/margin_dp5">

        <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp10"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/day_mode_text_color1_333333"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/stage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp5"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/day_mode_text_color2_666666"
                android:textSize="@dimen/text_size_14" />

        <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp5"
                android:layout_marginBottom="@dimen/margin_dp10"
                android:textColor="@color/day_mode_text_color3_999999"
                android:textSize="@dimen/text_size_14" />

    </LinearLayout>
</LinearLayout>